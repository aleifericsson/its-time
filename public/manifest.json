{
  "manifest_version": 3,
  "name": "What If?",
  "icons": {
    "256": "images/what_if.png"
  },
  "version": "1.0.0",
  "action": {
    "default_popup": "settings.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/content.CGKpazH1.js",
        "content/style.css",
        "images/close.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "assets/content.CGKpazH1.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "content/style.css"
      ],
      "type": "module"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}